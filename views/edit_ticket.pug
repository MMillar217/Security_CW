extends layout
//- block content from layout.pug
block content
    h2 #{title}
    form(method='POST', action='/tickets/edit/' + ticket._id)
        #form-group
            label Title:
            input.form-control(name='title', type='text', value=ticket.title, maxlength='20', disabled = true)
        #form-group
            label Description:
            textarea.form-control(name='description', maxlength='500', disabled = true)=ticket.description
        //- #form-group
        //-     label Found By:
        //-     input.form-control(name='foundBy', type='text', value=ticket.foundBy, maxlength='20', disabled=true)
        //- #form-group
        //-     label Assigned To:
        //-     input.form-control(name='assignedTo', type='text', value=ticket.assignedTo, maxlength='20')
        #form-group
            label Priority:
            //- input.form-control(name='priority', type='text', value=ticket.priority)
            select(name='priority')
                option(value='High') High
                option(value='Medium') Medium
                option(value='Low') Low
        #form-group
            label Status:
            //- input.form-control(name='status', type='text', value=ticket.status)
            select(name='status')
                option(value='Open') Open
                option(value='Closed') Closed
                option(value='Resolved') Resolved
        #form-group
            //- label Type:
            //- //- input.form-control(name='type', type='text', value=ticket.type)
            //- select(name='type')
            //-     option(value='Production') Production
            //-     option(value='Testing') Testing
            //-     option(value='Development') Development
            hr
            input.btn.btn-primary(type='submit', value='Submit')