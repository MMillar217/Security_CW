extends layout
//- block content from layout.pug
block content
    h2 #{title}
    .col-12
        .card
            .card-body
                form(method='POST', action='/users/login', id='loginForm', name='loginForm')
                    #form-group
                        label (*)Username:
                        input.form-control(name='username', id='username', type='text', maxlength='15')
                    #form-group
                        label (*)Password:
                        input.form-control(name='password', id='password', type='password', maxlength='12')
                    hr
                    #form-group
                        label Captcha:
                        .g-recaptcha(data-sitekey='6Lfr9sQUAAAAAOW3ND253iKY7nqYd-cLgcNResA2')
                    input.btn.btn-primary(type='submit', value='Login')
                    br
        